{
  "$id": "ImageMetadata",
  "$schema": "http://json-schema.org/draft-07/schema",
  "type": "object",
  "properties": {
    "id": {
      "$ref": "ApiId#"
    },
    "original_id": {
      "type": "string"
    },
    "title": {
      "type": "string"
    },
    "caption": {
      "type": ["string", "null"]
    },
    "state": {
      "$ref": "ImageState#"
    },
    "owner_id": {
      "type": "integer"
    },
    "collection_id": {
      "type": "integer"
    },
    "link": {
      "type": "string"
    },
    "longitude": {
      "type": [
        "number",
        "null"
      ]
    },
    "latitude": {
      "type": [
        "number",
        "null"
      ]
    },
    "geolocation": {
      "oneOf": [
        {
          "type": "null"
        },
        {
          "type": "object",
          "properties": {
            "longitude": {
              "type": "number"
            },
            "latitude": {
              "type": "number"
            },
            "altitude": {
              "type": "number"
            },
            "azimuth": {
              "type": "number"
            },
            "focal": {
              "type": "number"
            },
            "roll": {
              "type": "number"
            },
            "tilt": {
              "type": "number"
            },
            "footprint": {
              "type": "string"
            },
            "point": {
              "type": "string"
            }
          },
          "additionalProperties": false,
          "required": [
            "longitude",
            "latitude",
            "altitude",
            "azimuth",
            "focal",
            "roll",
            "tilt",
            "footprint",
            "point"
          ]
        }
      ]
    },
    "viewshed_simple": {
      "type": "string"
    },
    "footprint": {
      "type": "string"
    },
    "geotags_array": {
      "type": "array",
      "items": {
        "type": "string"
      }
    },
    "geotags_json": {
      "type": [
        "object",
        "null"
      ],
      "properties": {
        "type": {
          "type": "string"
        },
        "features": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "geometry": {
                "type": "object",
                "properties": {
                  "coordinates": {
                    "type": "array",
                    "items": {
                      "type": "number"
                    }
                  },
                  "type": {
                    "type": "string"
                  }
                }
              },
              "id": {
                "type": "integer"
              },
              "type": {
                "type": "string"
              },
              "properties": {
                "type": "object",
                "properties": {
                  "dist": {
                    "type": "integer"
                  },
                  "name": {
                    "type": "array",
                    "items": {
                      "type": "string"
                    }
                  },
                  "objectart": {
                    "type": "string"
                  },
                  "sprachcode": {
                    "type": "array",
                    "items": {
                      "type": "string"
                    }
                  },
                  "typegeom": {
                    "type": "number"
                  }
                }
              }
            }
          }
        }
      }
    }
  },
  "additionalProperties": false,
  "required": [
    "id",
    "original_id",
    "title",
    "caption",
    "state",
    "longitude",
    "latitude"
  ]
}
